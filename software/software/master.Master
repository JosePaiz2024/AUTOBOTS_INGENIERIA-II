    <link rel="shortcut icon" type="x-icon" href="Imagenes/logo.png" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title></title>
    <asp:ContentPlaceHolder ID="head" runat="server">
