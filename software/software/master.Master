    </nav>
    </header>
           <div>
            <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
            </asp:ContentPlaceHolder>
        </div>
    <style type="text/css">
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial;
    }

    body 
    {
        background-image: url("Imagenes/fon1.png");
        background-color: lightblue;
        background-size: cover;
        background-position: center;
        height: 150vh;
    }

    .header 
    {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 15px 60px;
        background: blue;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
    }

    .logo 
    {
        font-size: 40px;
        color: black;
        text-decoration: none;
        font-weight: 700;
        margin-right: 32%;
    }

    .navbar a 
    {
        position: relative;
        font-size: 20px;
        color: white;
        font-weight: 500;
        text-decoration: none;
        margin-left: 40px;
    }

    .navbar a::before 
    {
        content: "";
        position: absolute;
        top: 100%;
        left: 0;
        width: 0;
        height: 2px;
        background: black;
        transition: .3s;
    }

    .navbar a:hover::before 
    {
            width: 100%;
    }
    header img
    {
        height: 50px;
        width: 50px;
        border-radius: .5rem;
    }

</style>
